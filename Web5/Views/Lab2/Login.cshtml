@model Web5.Models.ViewModels.UserVM
@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <div class="card p-4 shadow">
        <h2 class="text-center fw-bold">Вход</h2>
        <hr />

        @using (Html.BeginForm("Login", "Lab2", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "col-md-4 col-form-label fw-bold" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-md-4 col-form-label fw-bold" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            if (!String.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="form-group row mb-3">
                    <div class="col-md-12">
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    </div>
                </div>
            }

            <div class="form-group row mb-3">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Войти" class="btn btn-dark" />
                </div>
            </div>
        }
    </div>
</div>